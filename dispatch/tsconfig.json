{
  "compilerOptions": {
    "outDir": "./dist/ts",
    "module": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@root/*": ["src/*"],
      "@hooks": ["src/hooks"],
      "components/*": ["src/components"]
    },
    "keyofStringsOnly": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
