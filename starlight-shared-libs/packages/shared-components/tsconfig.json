{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "strict": true,
    "paths": {},
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "declarations.d.ts", "stories/**/*"],
  "exclude": ["node_modules", "build", ".eslintrc.js"]
}
