{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "strict": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules/*"],
  "include": [
    "src/**/*.ts",
    "src/workers/**/*.js",
    "scripts/*.ts",
    "src/workers/user/*.js",
    ".eslintrc.js"
  ]
}
