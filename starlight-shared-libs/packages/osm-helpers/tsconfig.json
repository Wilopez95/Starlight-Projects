{
  "compilerOptions": {
    "target": "es2019",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "build",
    "outDir": "build"
  },
  "include": ["src/**/*"]
}
